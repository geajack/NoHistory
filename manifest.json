{
	"manifest_version": 2,

	"name": "No History",
	"description": "Temporarily disable browser history.",
	"version": "1.0",
	"applications":
	{
		"gecko":
		{
			"id": "no@histo.ry",
			"strict_min_version": "55.0"
		}
	},

	"background": {"scripts": ["background.js"]},
	
	"browser_action": {
		"browser_style": true,
		"default_icon": "icon_disabled.png"
	},
  
	"permissions": ["*://*/*", "history"]
}